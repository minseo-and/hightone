<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minseo.SignInMainActivity">

    <ImageView
        android:id="@+id/SignIn_titleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signin_titleimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="162dp"/>

    <ImageView
        android:id="@+id/SignIn_title"
        android:layout_width="162dp"
        android:layout_height="43dp"
        android:src="@drawable/friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignIn_titleImage"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/SignIn_Id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_sign"
        android:hint="ID를 입력해주세요."
        android:fontFamily="@font/bm_yeonseong"
        android:paddingStart="15dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignIn_title"
        android:layout_marginTop="26.5dp"
        android:layout_marginHorizontal="45dp"
        />

    <EditText
        android:id="@+id/SignIn_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edit_sign"
        android:hint="p.w를 입력해 주세요."
        android:fontFamily="@font/bm_yeonseong"
        android:paddingStart="15dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignIn_Id"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="45dp"
        />


    <Button
        android:id="@+id/signIn_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_next_on"
        android:fontFamily="@font/bm_yeonseong"
        android:text="로그인"
        android:minHeight="0dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignIn_password" />

    <TextView
        android:id="@+id/SignIn_sbtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeonseong"
        android:text="우정 기록표"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/signIn_Btn"
        android:layout_marginStart="110dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/signIn_Btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:fontFamily="@font/bm_yeonseong"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/SignIn_sbtitle"
        app:layout_constraintTop_toTopOf="@id/SignIn_sbtitle"
        android:layout_marginStart="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>