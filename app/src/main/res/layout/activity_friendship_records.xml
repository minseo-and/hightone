<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minseo.FriendshipRecordsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guide_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeonseong"
        android:text="이정우님"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintTop_toTopOf="@id/top_guide_line" />

    <TextView
        android:id="@+id/tv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeonseong"
        android:text="에게 어울리는 성격을 선택해 주세요!"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/max_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeonseong"
        android:text="*최대 3개까지 선택 가능합니다.*"
        android:textSize="10sp"
        android:textColor="#DD6363"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintTop_toBottomOf="@id/tv_choice" />

    <View
        android:id="@+id/top_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        app:layout_constraintTop_toBottomOf="@id/max_3" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        app:layout_constraintTop_toBottomOf="@id/bottom_guide_line" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="66dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:text="다음"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bm_yeonseong"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_choice_1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:background="@drawable/choice_btn1"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        app:layout_constraintBottom_toTopOf="@id/btn_choice_2"
        android:text="이정우님은 항상 해맑고 성실해요! "
        android:textColor="#A1A1A1"
        android:gravity="center"
        android:fontFamily="@font/bm_yeonseong" />

    <Button
        android:id="@+id/btn_choice_2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:background="@drawable/choice_btn"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_1"
        app:layout_constraintBottom_toTopOf="@id/btn_choice_3"
        android:text="이정우님은 혹시 천사? 인성 갑!! "
        android:textColor="#A1A1A1"
        android:gravity="center"
        android:fontFamily="@font/bm_yeonseong" />

    <TextView
        android:id="@+id/btn_choice_3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:background="@drawable/choice_btn"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_2"
        app:layout_constraintBottom_toTopOf="@id/btn_choice_4"
        android:text="아이디어 팡팡!! 이정우님의 창의력은 엄청나요! "
        android:textColor="#A1A1A1"
        android:gravity="center"
        android:fontFamily="@font/bm_yeonseong" />

    <TextView
        android:id="@+id/btn_choice_4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:background="@drawable/choice_btn"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_3"
        app:layout_constraintBottom_toTopOf="@id/btn_choice_5"
        android:text="친구가 너무 많아... 이정우님은 인싸...??"
        android:textColor="#A1A1A1"
        android:gravity="center"
        android:fontFamily="@font/bm_yeonseong" />

    <TextView
        android:id="@+id/btn_choice_5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_line"
        app:layout_constraintRight_toRightOf="@id/right_guide_line"
        android:background="@drawable/choice_btn"
        app:layout_constraintTop_toBottomOf="@id/btn_choice_4"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        android:text="내 배꼽 어디갔어?? 이정우님 너무 웃겨요ㅋㅋ"
        android:textColor="#A1A1A1"
        android:gravity="center"
        android:fontFamily="@font/bm_yeonseong" />




</androidx.constraintlayout.widget.ConstraintLayout>